<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.multicampus.hhh.mapper.BikeBoardMapper">

    <!--판매글 등록-->
    <insert id="insert">
        insert into bike_board(bike_id,user_id,product_name, title,image, price,info,status,regdate)
        values (#{param1}, #{param2}, #{param3}, #{param4}, #{param5}, #{param6}, #{param7}, #{param8}, )
    </insert>

    <!--구매 게시판 목록 조회-->
    <select id="readAll">
        select * from bike_board order by bike_id desc
    </select>

    <!--특정 게시물 조회-->
    <select id="readOne">
        select * from bike_board where bike_id = #{bike_id}
    </select>

    <!--게시글 수정(게시글 작성자 + 관리자만 가능)-->
    <update id="modify">
        update bike_board set
    </update>
    <!--게시글 삭제(게시글 작성자 + 관리자만 가능)-->
    <delete id = "delete">
        delete from bike_board where id = #{user_id}
    </delete>

</mapper>