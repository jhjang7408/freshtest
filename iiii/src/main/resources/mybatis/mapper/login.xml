<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.multicampus.hhh.mapper.MemberMapper">
    <insert id="insert">
        insert into user values( #{user_id}, #{password}, #{name}, #{nickname}, #{email}, #{address}, #{phnum})
        <!-- user_role_id와 social 기본값 처리-->
    </insert>

    <delete id="delete">
        delete from user where user_id = #{user_id}
    </delete>

    <update id="update">
        update user set email = #{email}, phnum = #{phnum}, address = #{address} where user_id = #{user_id}
    </update>


</mapper>