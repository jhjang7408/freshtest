<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.multicampus.hhh.mapper.AccBoardMapper">

    <!--판매글 등록-->
    <insert id="insert">
        insert into acc_board(ac_id,product_name, image, price,amount,info,brand_name)
        values (#{param1}, #{param2}, #{param3}, #{param4}, #{param5}, #{param6},#{param7})
    </insert>

    <!--구매 게시판 목록 조회-->
    <select id="readAll">
        select * from acc_board order by ac_id desc
    </select>

    <!--특정 게시글 조회-->
    <select id="readtOne">
        select * from acc_board where ac_id = #{ac_id}
    </select>
    <!--게시글 수정(관리자만 가능)-->
    <update id="modify">
        update acc_board set
    </update>
    <!--게시글 삭제(관리자만 가능)-->
    <delete id = "delete">
        delete from acc_board where
    </delete>


</mapper>